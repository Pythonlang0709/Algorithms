class Node:
	def __init__(self,data=None):
		self.data = data
		self.next = None
class linkedlist:
	def __init__(self):
		self.head = None
	def printelements(self):
		printval = self.head
		while printval:
			print(printval.data,end=" ")
			printval = printval.next
	def front(self,data):
			newnode = Node(data)
			newnode.next = self.head
			self.head = newnode
	def end(self,data):
		newnode = Node(data)
		if self.head is None:
			self.head = newnode
		else:
			laste = self.head
			while (laste.next):
				laste = laste.next
			laste.next = newnode
	def insertnode(self,prev,data):
		if prev is None:
			print("The Node cannot be inserted")
		else:
			newnode = Node(data)
			newnode.next = prev.next
			prev.next = newnode
	def popstart(self):
		if self.head is None:
			return
		temp = self.head
		self.head = self.head.next
		temp = None
	def popend(self):
		if self.head is None:
			return
		last = self.head
		while(last.next.next):
			last = last.next
		last.next = None
	def popkey(self,key):
		if self.head is None:
			return
		temp = self.head
		if self.head.data==key:
			self.head = self.head.next
			temp = None
			return
		prev = None
		while(temp.next!=None and temp.data!=key):
			prev = temp
			temp = temp.next
		if temp.data!=key:
			return
		prev.next = temp.next
		temp = None
	def reverselink(self):
		current = self.head
		if self.head is None:
			return
		prev = None
		while(current is not None):
			next = current.next
			current.next = prev
			prev = current
			current = next
		self.head = prev
	def realfunction(self,current,prev):
			if current.next is None:
				self.head = current
				current.next = prev
				return
			next = current.next
			current.next = prev
			self.realfunction(next,current)
	def recursiveapproach(self):
			if self.head is not None:
				self.realfunction(self.head,None)
			
			
		
		
		
	
		
		
		
		
list1 = linkedlist()
list1.head = Node(0)
e2 = Node(1)
e3 = Node(2)
list1.head.next = e2
e2.next = e3
list1.front("Whole Numbers :")
list1.end(".....")
list1.insertnode(list1.head,3)
list1.popstart()
list1.popend()
list1.popkey(6)
list1.printelements()
list1.reverselink()
list1.printelements()
list1.recursiveapproach()
list1.printelements()
