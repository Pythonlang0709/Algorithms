arr = [7,9,5,4,3,10,1]
stack = []
for i in arr:
    if len(stack)>0:
        if stack[0]<i:
            stack.clear()
            stack.append(i)
        else:
            stack.append(i)
    else:
                 stack.append(i)
print(stack)                 
print(len(stack))                 
            
                    
            
        
